<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.YourApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#6750A4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#625B71</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Optional: Text appearances -->
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.YourApp.Headline</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.YourApp.Body</item>
    </style>

    <style name="TextAppearance.YourApp.Headline" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.YourApp.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
