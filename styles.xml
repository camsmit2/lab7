<resources>
    <!-- Base TextView style -->
    <style name="Widget.YourApp" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- Add any other TextView styling you want here -->
    </style>

    <style name="Widget.YourApp.CardTitle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.YourApp.CardSubtitle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.YourApp.ItemCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
